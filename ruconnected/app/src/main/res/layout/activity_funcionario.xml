<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FuncionarioActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="285dp"
        android:layout_height="448dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <Button
            android:id="@+id/bAdicionarPrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:drawableRight="@drawable/outline_arrow_forward_ios_black_18dp"
            android:text="Excluir Cardápio"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/bCardapio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:drawableRight="@drawable/outline_arrow_forward_ios_black_18dp"
            android:text="Adicionar Cardápio"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/bAlterarDados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:backgroundTintMode="add"
            android:drawableRight="@drawable/outline_arrow_forward_ios_black_18dp"
            android:text="Alterar Dados Pessoais"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="normal" />

        <Button
            android:id="@+id/bAlterarPrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:backgroundTintMode="add"
            android:drawableRight="@drawable/outline_arrow_forward_ios_black_18dp"
            android:text="Alterar Cardápio"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="normal" />

        <Button
            android:id="@+id/bVisualizarFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:drawableRight="@drawable/outline_arrow_forward_ios_black_18dp"
            android:shadowColor="@color/design_default_color_primary"
            android:text="Visualizar FeedBack"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="normal" />

        <Button
            android:id="@+id/bSairFuncioanario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:backgroundTintMode="add"
            android:drawableRight="@drawable/outline_arrow_forward_ios_black_18dp"
            android:text="Sair"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="normal" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>